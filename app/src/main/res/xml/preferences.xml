<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		android:title="Notifications">

		<SwitchPreference
			android:key="reminders_enabled"
			android:summary="@string/settings_reminders_enabled_summary"
			android:title="@string/settings_reminders_enabled_title"/>

		<uk.co.jamiecruwys.gratitude.settings.TimePreference
			android:dependency="reminders_enabled"
			android:dialogLayout="@layout/preference_time"
			android:key="reminders_time"
			android:summary="@string/settings_reminders_time_summary"
			android:title="@string/settings_reminders_time_title"/>

	</PreferenceCategory>

</PreferenceScreen>